<%= form_for(@card) do |f| %>
  <% if @card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
      <% @card.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%# Full Name %>
  <div class="form-group has-success">
    <%= f.label :name %><span class="asd">(必須)</span>
    <%= f.text_field :name, :class => 'form-control', :placeholder => t("guide.card.name_placeholder") %>
  </div>

  <%# Name Furigana %>
  <div class="form-group has-success">
    <%= f.label :kana_name %><span class="asd">(必須)</span>
    <%= f.text_field :kana_name, :class => 'form-control', :required => true, :placeholder => '名前を入力してください' %>
  </div>

  <%# postacode %>
  <div class="form-group has-success">
    <%= f.label :postalcode, style: "display: block;" %></span>
    <%= f.text_field :postalcode, :class => 'form-control', style: "display: inline; width: 25%" %>
    <%= f.button t("guide.card.postalcode_submit"), id: "getarea-button", type: "button" %>
    <span id="postalcode-result"></span>
  </div>

  <%# prefectural %>
  <div class="form-group has-success">
    <%= f.label :address_prefectural %>
    <%= f.select :address_prefectural, @prefectural.collect{|t|[t.name, t.id]}, {prompt: t("guide.card.please_select")} %>
  </div>


 <div class="field">
    <%= f.label :address_prefectural %>
    <%= f.select(:address_prefectural, @prefectural.collect{|t|[t.name,t.id]}, {prompt: "選択してください"}) %>
 </div>

 <div class="field">
    <%= f.label :address_city %>
    <%= f.text_field(:address_city) %>
 </div>

 <div class="field">
    <%= f.label :address_street %>
    <%= f.text_field(:address_street) %>
 </div>

 <div class="field">
    <%= f.label :address_building %>
    <%= f.text_field(:address_building) %>
 </div>

 <div class="field">
    <%= f.label :tel %>
    <%= f.text_field :tel %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :free_text %>
    <%= f.text_field :free_text %>
  </div>

  <div class="field">
    <%= f.label :department %>
    <%= f.select(:department, Department.all.collect{|t|[t.name, t.id]}, {prompt: "選択してください"}) %>
  </div>

  <div class="field">
    <%= f.label :course %>
    <%= f.select :course, options_for_select(@course.collect{|course|[course.name, course.id]}, 0) %>
  </div>

  <div class="field">
    <%= f.label :laboratory %>
    <%= f.select :laboratory, options_for_select(@laboratory.collect{|laboratory|[laboratory.name, laboratory.id]}, 0) %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
